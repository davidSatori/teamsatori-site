---
import Page from "../../layouts/Page.astro";
import Hero from "../../components/Hero.astro";
import CTA from "../../components/CTA.astro";

const problems = [
  "You\u2019ve got big goals, but the team isn\u2019t aligned.",
  "We\u2019re not sure which growth opportunities are real vs. distractions.",
  "We need to test new opportunities without making big bets first.",
  "There\u2019s no system for balancing today\u2019s business with tomorrow\u2019s innovations.",
  "I\u2019m the visionary, but I need help turning that into a process.",
];

const phases = [
  {
    phase: "Phase 1",
    title: "Core Strategy Development",
    months: "Months 1\u20134",
    description: "Step out of the day-to-day and reconnect with the bigger picture: Who are you built to serve? Through customer interviews, job mapping, and data-backed need discovery, we identify your best growth opportunities.",
    outcome: "A focused, validated growth strategy and clarity on what to build, for whom, and why.",
  },
  {
    phase: "Phase 2",
    title: "Implementation Launch",
    months: "Months 4\u20135",
    description: "A strategy only works if it\u2019s actionable. We help turn that strategy into a working system \u2014 assigning owners, building out the metrics, and documenting key processes.",
    outcome: "Real-world movement, team alignment, and confidence that execution is matching vision.",
  },
  {
    phase: "Phase 3",
    title: "Refinement & Optimization",
    months: "Months 6\u20138",
    description: "Time to sharpen. We analyze performance and ask: Are you solving the right problems? We refine delivery and level up the capabilities that matter most.",
    outcome: "Improved speed, more efficient operations, and systems that actively support growth.",
  },
  {
    phase: "Phase 4",
    title: "Evolution & Growth",
    months: "Months 9\u201312",
    description: "Assess what\u2019s working, explore adjacent opportunities, and set up rhythms to keep evolving your strategy without losing focus.",
    outcome: "Momentum, not just a plan \u2014 plus a system for keeping your strategy alive and responsive.",
  },
];

const benefits = [
  "You stop reacting and start steering.",
  "Your team knows what the company is prioritizing \u2014 and why.",
  "You get clarity on which opportunities are real, and which are distractions.",
  "Resources are focused on the right market segments, at the right time.",
  "Strategy becomes a repeatable leadership process \u2014 not a guessing game.",
];

const teamMembers = [
  { name: "Haraya del Rosario Gust", title: "Founder & President", image: "/images/team/haraya.png" },
  { name: "David Azanza", title: "Managing Director & Strategy Practice Lead", image: "/images/team/david.png" },
  { name: "Czarina A\u00F1o-Agullana", title: "Practice Lead, Integrator Services", image: "/images/team/czarina.jpg" },
  { name: "Ana Isabel Caguicla", title: "Head of Research & Program Development", image: "/images/team/isah.png" },
];
---

<Page title="Strategy & Innovation" description="Research-backed strategy and innovation workshops for founder-led companies in Southeast Asia.">
  <Hero
    title="When Growth Slows, It\u2019s Time to Rethink Strategy"
    subtitle="Find Focus. Prioritize Growth. Align Your Team."
    eyebrow="Strategy & Innovation"
    image="/images/heroes/hero-services.jpg"
    description="Your operations are steady, the team is working hard, but growth has slowed or become harder to predict. Without structured strategy, teams default to gut feel, chase shiny objects, or double down on what worked in the past."
    primaryCTA={{ text: "Book a Strategy Session", href: "/contact" }}
  />

  <!-- The Real Problems We Solve -->
  <section class="section-padding">
    <div class="container-site">
      <div class="text-center mb-12">
        <span class="eyebrow mb-3 block">Sound familiar?</span>
        <h2 class="text-2xl lg:text-4xl">The Real Problems We Solve</h2>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {problems.map((problem, i) => (
          <div class="card p-6 flex items-start gap-4">
            <span class="text-2xl font-bold text-primary shrink-0">{i + 1}</span>
            <p class="text-neutral-800 leading-relaxed">{problem}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Satori Strategy Framework -->
  <section class="section-padding bg-purple-700 text-white">
    <div class="container-site">
      <div class="text-center mb-12">
        <span class="eyebrow !text-white/60 mb-3 block">Our approach</span>
        <h2 class="text-2xl lg:text-4xl text-white mb-4">The Satori Strategy Framework</h2>
        <p class="text-white/80 max-w-2xl mx-auto">
          A structured, proven approach that helps leadership teams move beyond gut feel to systematically identify
          their best growth opportunities and align the entire organization around executing them.
        </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Customer Discovery</h3>
          <p class="text-sm text-white/80">Deep interviews and JTBD (Jobs to Be Done) analysis to understand what your customers are really trying to accomplish.</p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Opportunity Mapping</h3>
          <p class="text-sm text-white/80">Identify underserved needs and growth levers in your market that competitors are missing.</p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Value Proposition Design</h3>
          <p class="text-sm text-white/80">Craft compelling value propositions grounded in customer research, not assumptions.</p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Strategic Alignment</h3>
          <p class="text-sm text-white/80">Get every leader on the same page about direction, priorities, and trade-offs.</p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Innovation Sprints</h3>
          <p class="text-sm text-white/80">Test new ideas with real data before committing resources. Fast learning, minimal risk.</p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-lg font-bold text-white mb-2">Execution Planning</h3>
          <p class="text-sm text-white/80">Translate strategy into 90-day priorities aligned with EOS&reg; or your quarterly planning cadence.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 12-Month Partnership Framework -->
  <section class="section-padding">
    <div class="container-site">
      <div class="text-center mb-12">
        <span class="eyebrow mb-3 block">The engagement</span>
        <h2 class="text-2xl lg:text-4xl">A 12-Month Partnership to Turn Vision Into Traction</h2>
      </div>
      <div class="grid sm:grid-cols-2 gap-6">
        {phases.map((p) => (
          <div class="card p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-xs font-bold uppercase tracking-wider text-primary bg-purple-50 px-3 py-1 rounded">{p.phase}</span>
              <span class="text-xs text-neutral-600">{p.months}</span>
            </div>
            <h3 class="text-xl font-bold mb-3">{p.title}</h3>
            <p class="text-sm text-neutral-800 leading-relaxed mb-4">{p.description}</p>
            <div class="border-t border-neutral-200 pt-4">
              <p class="text-sm text-neutral-600"><strong>Outcome:</strong> {p.outcome}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- AI Opportunity Mapping Workshop -->
  <section class="section-padding bg-purple-50">
    <div class="container-narrow text-center">
      <span class="eyebrow mb-3 block">Featured workshop</span>
      <h2 class="text-2xl lg:text-4xl mb-4">AI Opportunity Mapping Workshop</h2>
      <p class="text-neutral-800 leading-relaxed mb-6 max-w-2xl mx-auto">
        A strategic workshop that helps leadership teams map where AI creates value in their business
        and prioritize which opportunities to pursue. For teams that need clarity on their AI strategy
        and a framework for where to focus.
      </p>
      <a href="/services/ai-opportunity-map" class="btn-primary">Learn More</a>
    </div>
  </section>

  <!-- What Changes When Strategy Has Structure -->
  <section class="section-padding">
    <div class="container-site">
      <div class="text-center mb-12">
        <h2 class="text-2xl lg:text-4xl">What Changes When Strategy Has Structure</h2>
      </div>
      <div class="max-w-2xl mx-auto space-y-4">
        {benefits.map((benefit) => (
          <div class="flex items-start gap-4">
            <svg class="w-6 h-6 text-teal shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            <p class="text-neutral-800 leading-relaxed">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Strategy Practice Team -->
  <section class="section-padding bg-purple-50">
    <div class="container-site">
      <div class="text-center mb-12">
        <span class="eyebrow mb-3 block">Your team</span>
        <h2 class="text-2xl lg:text-4xl">Strategy Practice Team</h2>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-4xl mx-auto">
        {teamMembers.map((member) => (
          <div class="text-center">
            <img src={member.image} alt={member.name} class="w-24 h-24 rounded-full object-cover mx-auto mb-3" />
            <h3 class="font-bold text-sm">{member.name}</h3>
            <p class="text-xs text-neutral-600">{member.title}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA title="Let\u2019s Build a Strategy Your Team Can Actually Execute" />
</Page>
