---
interface Props {
  title?: string;
  subtitle?: string;
  items: { question: string; answer: string }[];
}

const {
  title = "Frequently Asked Questions",
  subtitle = "Frequently Asked Questions from Founder-Led Teams",
  items,
} = Astro.props;
---

<section class="section-padding">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-2xl lg:text-4xl mb-3">{title}</h2>
      {subtitle && <p class="text-neutral-600">{subtitle}</p>}
    </div>

    <div class="space-y-4">
      {items.map((item, i) => (
        <details class="group border border-neutral-950/10 rounded-lg">
          <summary class="flex items-center justify-between cursor-pointer p-5 text-base hover:text-primary transition-colors">
            {item.question}
            <svg class="w-5 h-5 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-5 pb-5 text-sm text-neutral-800 leading-relaxed">
            <p>{item.answer}</p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
