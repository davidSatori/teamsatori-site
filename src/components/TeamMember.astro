---
interface Props {
  name: string;
  title: string;
  bio?: string;
  image?: string;
  certifications?: string[];
  linkedin?: string;
  href?: string;
}

const { name, title, bio, image, certifications = [], linkedin, href } = Astro.props;
---

<div class="card p-6 text-center">
  <div class="w-24 h-24 mx-auto mb-4 rounded-full overflow-hidden bg-purple-100">
    {image ? (
      <img src={image} alt={name} class="w-full h-full object-cover" />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-primary text-2xl">
        {name.charAt(0)}
      </div>
    )}
  </div>

  <h3 class="text-base font-bold">{name}</h3>
  <p class="text-sm text-neutral-600 mt-1">{title}</p>

  {bio && <p class="text-sm text-neutral-800 mt-3 leading-relaxed">{bio}</p>}

  {href && (
    <a href={href} class="text-sm text-primary hover:text-primary-hover mt-3 inline-block">Read More</a>
  )}

  <div class="flex items-center justify-center gap-2 mt-3">
    {linkedin && (
      <a href={linkedin} target="_blank" rel="noopener noreferrer" class="text-neutral-600 hover:text-primary" aria-label={`${name} LinkedIn`}>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
    )}
  </div>

  {certifications.length > 0 && (
    <div class="flex flex-wrap justify-center gap-2 mt-4">
      {certifications.map((cert) => (
        <span class="text-xs bg-purple-50 text-primary px-2 py-1 rounded">{cert}</span>
      ))}
    </div>
  )}
</div>
