---
interface Props {
  title: string;
  description: string;
  icon?: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="card p-8 flex flex-col gap-4 hover:shadow-lg transition-shadow group">
  {icon && (
    <div class="w-12 h-12 rounded-lg bg-purple-50 flex items-center justify-center text-primary">
      <img src={icon} alt="" class="w-6 h-6" />
    </div>
  )}
  <h3 class="text-lg font-bold group-hover:text-primary transition-colors" set:html={title} />
  <p class="text-sm text-neutral-800 leading-relaxed">{description}</p>
  <span class="text-sm text-neutral-600 mt-auto pt-2">Learn More</span>
</a>
