---
interface Props {
  title?: string;
  steps: { number: string; title: string; description: string }[];
}

const {
  title = "How It Works",
  steps,
} = Astro.props;
---

<section class="section-padding bg-purple-50">
  <div class="container-site">
    <h2 class="text-2xl lg:text-4xl text-center mb-16">{title}</h2>

    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step) => (
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary text-white flex items-center justify-center text-xl mx-auto mb-6">
            {step.number}
          </div>
          <h3 class="text-lg font-bold mb-3">{step.title}</h3>
          <p class="text-sm text-neutral-800 leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
